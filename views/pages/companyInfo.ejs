<%- include("../partials/head", {title:"Home"}) %>


    <%-include("../partials/sidebar") %>


        <div class="content">
            <div class="container">
                <h3>
                    <%= company.compName %>
                </h3>
                <h5></h5>
                <div class="boxcont">

                    <div class="searchres mt-3">
                        <h4 class="mt-3">Dues</h4>

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Start Date</th>
                                    <th scope="col">End Date</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Amount</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for( let i=0; i < dues.length; i++ ) { %>

                                    <tr>
                                        <th scope="row">
                                            <%= i+1 %>
                                        </th>
                                        <td>
                                            <%= dues[i].dueDate.toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= dues[i].endDate?dues[i].endDate.toLocaleDateString():'-' %>
                                        </td>
                                        <td>
                                            <%= dues[i].description %>
                                        </td>
                                        <td>
                                            <%= dues[i].ammount %>
                                        </td>
                                        <td> <a href=<%= "/enddue/" + dues[i]._id %>><%= dues[i].endDate?"":"End" %></a> | <a href=<%= "/due?editid="+dues[i]._id+"&redir="+company._id %>>Edit</a> | <a href=<%= "/deldue/" + dues[i]._id %>>Delete</a> </td>
                                    </tr>

                                    <% } %>
                            </tbody>
                        </table>

                        <h4 class="mt-3">Payments</h4>


                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Start Date</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Amount</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for( let i=0; i < payments.length; i++ ) { %>

                                    <tr>
                                        <th scope="row">
                                            <%= i+1 %>
                                        </th>
                                        <td>
                                            <%= payments[i].dueDate.toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= payments[i].description %>
                                        </td>
                                        <td>
                                            <%= payments[i].ammount %>
                                        </td>
                                        <td> <a href=<%= "/payment?editid=" + payments[i]._id %>>Edit</a> | <a href=<%= "/delpayment/" + payments[i]._id %>>Delete</a> </td>
                                    </tr>

                                    <% } %>
                            </tbody>
                        </table>


                    </div>


                </div>
            </div>
        </div>

        <%- include("../partials/foot") %>